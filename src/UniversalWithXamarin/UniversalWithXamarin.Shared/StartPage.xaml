<Page
    x:Class="UniversalWithXamarin.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalWithXamarin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0,0.333,0,-0.333">

        <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="10">
            <Button Content="Get word" Click="ButtonBase_OnClick"/>
            <ProgressRing IsActive="{Binding IsBusy}"></ProgressRing>
            <TextBlock TextWrapping="Wrap" Text="{Binding Word}" FontSize="24"/>

        </StackPanel>
    </Grid>
</Page>
